{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["fra1"],
  "env": {
    "NODE_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1",
    "NEXTAUTH_URL": "https://your-domain.com",
    "MONGODB_URI": "@mongodb_uri",
    "AWS_ACCESS_KEY_ID": "@aws_access_key_id",
    "AWS_SECRET_ACCESS_KEY": "@aws_secret_access_key",
    "AWS_S3_BUCKET": "@aws_s3_bucket",
    "STRIPE_SECRET_KEY": "@stripe_secret_key",
    "RESEND_API_KEY": "@resend_api_key",
    "VONAGE_API_KEY": "@vonage_api_key",
    "VONAGE_API_SECRET": "@vonage_api_secret",
    "VONAGE_FROM_NUMBER": "@vonage_from_number",
    "FIREBASE_ADMIN_PROJECT_ID": "@firebase_admin_project_id",
    "FIREBASE_ADMIN_CLIENT_EMAIL": "@firebase_admin_client_email",
    "FIREBASE_ADMIN_PRIVATE_KEY": "@firebase_admin_private_key",
    "SENDER_EMAIL": "notifications@your-domain.com",
    "SITE_NAME": "Your Platform Name"
  },
  "crons": [
    {
      "path": "/api/cron/check-subscriptions",
      "schedule": "0 0 * * *"
    }
  ]
}